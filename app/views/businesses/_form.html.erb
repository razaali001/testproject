<div class="container mt-3">
  <div class="row">
    <h3 class="text-center">Add New Business</h3>
    <hr />
    <div class="col-sm-4 offset-md-4 bg-light shadow shadow-lg p-5">
      <%= form_with model: @business do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control border border-none" %>
        </div>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %><br>
        </div>

        <div class="form-group">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<h3 class="text-center mt-5">Add Member to the current Business</h3>
<div class="container">
  <div class="row">
    <div class="col-6">
      <%= form_with url: create_member_business_path(@business)  do |form| %>

        <div class="form-group">
          <%= form.label :Select %><br />
          <%= form.collection_select :user_ids, @users, :id, :name,{:include_blank => true}, {:multiple => true, class: "form-control"} %>
        </div>

        <div class="form-group mt-2">
          <%= form.submit %>
        </div>
      <% end %>
      </div>
  </div>
</div>
